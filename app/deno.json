{
  "imports": {
    "std/": "https://deno.land/std@0.193.0/"
  },
  "tasks": {
    "fmt": "deno fmt",
    "cli:update-series-and-signals": "deno run -A --unstable cron/update-series-and-signals.ts",
    "db:migrate-up": "DB_MIGRATIONS=UP deno run -A --unstable model/db.ts",
    "dev": "deno run --watch -A --unstable main.ts",
    "main": "deno run -A --unstable main.ts",
    "compile": "deno compile -A --unstable --output compiled-backend main.ts",
    "update-lock": "deno cache --lock=deno.lock --lock-write main.ts"
  },
  "fmt": {
    "lineWidth": 100,
    "exclude": ["data", ".vscode"]
  }
}
