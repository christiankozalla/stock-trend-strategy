{
  "imports": {
    "std/": "https://deno.land/std@0.224.0/"
  },
  "tasks": {
    "fmt": "deno fmt",
    "cli:update-series-and-signals": "deno run -A --unstable-ffi cron/update-series-and-signals.ts",
    "cli:write-average-volume": "deno run -A --unstable-ffi cron/write-average-volume.ts",
    "db:migrate-up": "DB_MIGRATIONS=UP deno run -A --unstable-ffi db.ts",
    "update-lock": "deno cache --lock=deno.lock --lock-write cron/update-series-and-signals.ts"
  },
  "fmt": {
    "lineWidth": 100,
    "exclude": ["data", ".vscode"]
  }
}
